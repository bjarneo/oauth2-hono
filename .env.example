# Server
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# Database (PostgreSQL with Prisma)
# Comment out to use in-memory storage for development
DATABASE_URL=postgresql://oauth2:oauth2@localhost:5432/oauth2

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Token Defaults (can be overridden per tenant)
DEFAULT_ACCESS_TOKEN_TTL=3600
DEFAULT_REFRESH_TOKEN_TTL=2592000
DEFAULT_AUTHORIZATION_CODE_TTL=600
DEFAULT_DEVICE_CODE_TTL=1800
DEFAULT_DEVICE_CODE_INTERVAL=5

# Admin API
ADMIN_API_KEY=your-secure-admin-api-key

# Encryption (for identity provider client secrets)
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=your-32-byte-encryption-key

{
  "name": "oauth2-hono-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Production-grade multi-tenant OAuth 2.0 Authorization Server",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev:server",
    "dev:server": "npm run dev -w @oauth2-hono/server",
    "dev:admin": "npm run dev -w @oauth2-hono/admin",
    "build": "npm run build -w @oauth2-hono/shared && npm run build -w @oauth2-hono/server && npm run build -w @oauth2-hono/admin",
    "build:server": "npm run build -w @oauth2-hono/server",
    "build:admin": "npm run build -w @oauth2-hono/admin",
    "test": "npm run test -w @oauth2-hono/server",
    "test:run": "npm run test:run -w @oauth2-hono/server",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "prisma": "^6.2.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
